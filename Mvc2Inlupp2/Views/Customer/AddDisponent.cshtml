@model Mvc2Inlupp2.ViewModels.CustomerAddDisponentViewModel
@{
    ViewData["Title"] = "Home Page";
}
<h2>Insert Money</h2>
<form asp-controller="Customer" asp-action="AddDisponent" method="post">
    <div class="form-group">
        <label asp-for="DisponentId">Disponent Customer Id</label>
        <input class="form-control" asp-for="DisponentId">
        <span asp-validation-for="DisponentId" class="field-validation-error"></span>
        <br />
        <input class="form-control" style="display:none;" asp-for="CustomerId" value="@Model.CustomerId">
        <input class="form-control" style="display:none;" asp-for="AccountId" value="@Model.AccountId">

        <br />
        <button type="submit" class="btn btn-primary">Add Account</button>
    </div>
</form>